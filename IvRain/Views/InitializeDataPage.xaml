<Page
    x:Class="IvRain.Views.InitializeDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IvRain.Views"
    xmlns:vm="using:IvRain.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:InitializeDataPageViewModel/>
    </Page.DataContext>

    <Grid>
        <StackPanel>
            <PasswordBox x:Name="FirstPasswordBox" Password="{Binding FirstPassword.Value}"/>
            <PasswordBox x:Name="SecondPasswordBox" Password="{Binding SecondPassword.Value}"/>
            <Button x:Name="RegisterButton" Content="Register" IsEnabled="{Binding IsRegistrable.Value}"/>
        </StackPanel>
    </Grid>
</Page>
